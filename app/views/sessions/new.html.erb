<p><u><h1>Please log in </p></u></h1>

<%= form_for(@player, url: login_path) do |f| %>
  <b><p>Select player: <%= f.collection_select(:name, Player.all, :name, :name, include_blank: true) %></b></p><br>
  <b>Password: <%= f.password_field :password %></b><br>
  <p><br><%= f.submit "Log In" %></p>
  <b><br><p> Create a new player: <%= link_to "Register", new_player_path %></b>
<% end %>
