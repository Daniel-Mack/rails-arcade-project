<u><h1><%= @game.name %></h1></u><br>

<h4><%= link_to "Edit game", edit_game_path(@game) %></h4>
<h4><%= link_to "Create a character", new_game_character_path(@character, game_id: @game) %><br></h4>


<h3>Select your opponent:</h3>
<%= form_for (@game) do |f| %>
  <%= f.collection_select :player_ids, Player.not_me(current_player), :id, :name, :include_blank => "Computer" %>
<% end %>

<h3>Select a character to start the game:</h3>

<% @game.characters.each do |character| %>
  <p><%= link_to character.name, game_character_path(character, game_id: @game) %></p>
<% end %><br>
