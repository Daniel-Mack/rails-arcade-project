<br><h1>Which game would you like to play?</h1>

<% @games.uniq.each do |game| %>
  <ul>
    <b><br><li>Name: <%= link_to game.name, game_path(game) %><br><br>
    Difficulty: <%= game.difficulty_level %><br><br>
    Fun Rating: <%= game.fun_rating %></li><br></b>
  </ul>
<% end %>

<br><h3><%= link_to "Create a New Game", new_game_path %></h3><br><br>

